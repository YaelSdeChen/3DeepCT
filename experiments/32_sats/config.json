{
  "optimizer": {
    "lr": 1e-3
  },
  "training": {
    "batch_size": 32,
    "max_epochs": 1000,
    "train_loader": {
      "path": ["../data/your_data/train/"],
      "shuffle": "True",
      "num_workers": 16,
      "eval_percent": 0.2,
      "key": "beta"
    },
    "loss_momentum": 0.5,
    "save_model_gap": 1,
    "scheduler": {
      "name": "StepLR",
      "step_size": 10,
      "gamma": 0.9
    },
    "eval_epoch_gap": 10,
    "use_pretrain": false,
    "pretrain_path" : ""
  },
  "network": {
    "name": "3DeepCT",
    "in_channels": 32,
    "out_channels": 32,
    "model_depth": 32
  },
  "testing": {
    "batch_size": 1,
    "test_loader": {
      "path": ["../data/your_data/test/"],
      "shuffle": "True",
      "num_workers": 2,
      "min_idx": 0,
      "max_idx": 5,
      "key": "beta"
    },
    "masks_path": "../data/your_data/masks",
    "loss_momentum": 0.5,
    "model_path" : "/experiments/32_sats/32_sats_model"
  },
  "loss": {
    "name": "MSE"
  }
}
